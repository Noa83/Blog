<div class="article_form">
    {{ form_start(formView, {'attr': {'class': 'form-horizontal', 'novalidate':'novalidate'}}) }}

    <div class="form-group">
        <div class="col-sm-12">
            {{ form_errors(formView.title) }}
        </div>

        {{ form_label(formView.title, "Titre du Chapitre", {'label_attr': {'for':'title_label'}}) }}

        <div class="col-sm-12">
            {{ form_widget(formView.title, {'attr': {'class': 'form-control', 'id':'title_label', 'value':( article.title ) }}) }}
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-12">
            {{ form_errors(formView.content) }}
        </div>

        {{ form_label(formView.content, "Contenu du Chapitre", {'label_attr': {'for':'content'}}) }}

        <div class="col-sm-12">
            <script src="//cloud.tinymce.com/stable/tinymce.min.js?apiKey={{ tinyMceApiKey }}"></script>
            <script>tinymce.init({selector: 'textarea'});</script>
            <script type="text/javascript">
                window.onload = function() {
                    var body = '{{ article.content | e('js') }}';
                    tinyMCE.activeEditor.setContent( body );
                };
            </script>
            {{ form_widget(formView.content, {'attr': {'class': 'form-control','id':'content', 'required':'false', 'row':'15' }}) }}
        </div>
    </div>
    <br>

    <div class="col-sm-12">
        <input type="button" data-toggle="modal" data-target="#myModal" value="Publier"
               class="btn btn-default pull-right"/>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span
                                aria-hidden="true">&times;</span></button>
                    <h4 class="modal-title" id="myModalLabel">Confirmation de publication</h4>
                </div>
                <div class="modal-body">
                    Vous Ãªtes sur le point de publier cet article, veuillez confirmer votre choix.
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-default" data-dismiss="modal">Annuler</button>
                    <input id="publish" type="submit" value="Publier" class="btn btn-primary pull-right"/>
                </div>
            </div>
        </div>
    </div>
    {{ form_end(formView) }}
</div>
<br>

