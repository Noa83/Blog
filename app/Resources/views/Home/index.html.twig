{% extends 'baseBlog.html.twig' %}

{% block body %}
    <h1 class="col-sm-12 pages_titles text-center">Les derniers chapitres parus</h1>
    <div class="col-sm-12">
        {% for article in paginator %}
            <div class="col-sm-12 article_case">
                <div class="col-sm-12">
                    <h3 class="col-sm-8">{{ article.title }}</h3>
                    <div class="pull-right">Publi√© le: {{ article.createdDate|date('d-m-Y') }}</div>
                </div>
                <div class="col-sm-12">
                    {% autoescape %}
                        <p>{{ article.content|truncate(700)|html }}</p>
                    {% endautoescape %}
                </div>

                <a href="{{ path('visualization_article', {'id': article.id}) }}" class="btn btn-next pull-right">
                    <i class="glyphicon glyphicon-eye-open"></i>
                    Lire la suite...
                </a>
            </div>
        {% endfor %}
        <hr>
        <ul class="pager">
            {% for p in range(1, numberOfPages) %}
                <li{% if p == page %} class="active" {% endif %}>
                    <a href="{{ path('home_page', {'page': p}) }}">{{ p }}</a>
                </li>
            {% endfor %}
        </ul>
    </div>
{% endblock %}



