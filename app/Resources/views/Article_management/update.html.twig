{% extends 'baseBlog.html.twig' %}

{% block body %}
    <h4>Modification de l'article: {{ article.title }}</h4>

    {{ include(':Article_management:formTinyMCEPreRempli.html.twig') }}

    <div class="col-sm-12">
        <input type="button" data-toggle="modal" data-target="#myModal" value="Mettre à jour"
               class="btn btn-default pull-right"/>
    </div>

    {{ include(':Article_management:modalUpdate.html.twig') }}

    {{ form_end(formView) }}

    {{ include(':Basics_Components:flashMessages.html.twig') }}

    <div class="col-sm-12">
        <a href="{{ path('author_home_page') }}" class="btn btn-info pull-right">
            <i class="glyphicon glyphicon-eye-open"></i>
